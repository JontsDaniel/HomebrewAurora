                <thead>
                    <tr><td>Nível</td><td>Proficiência</td><td>Características</td><td>1°</td><td>2°</td><td>3°</td><td>4°</td><td>5°</td></tr>
                </thead>
                <tr><td>1o</td><td>+2</td><td>Armadura da Fé, Estudos Sagrados, Força Flexível</td><td>—</td><td>—</td><td>—</td><td>—</td><td>—</td></tr>
                <tr><td>2o</td><td>+2</td><td>Instinto Inquisidor, Juramento de Inimizade, Conjuração</td><td>2</td><td>—</td><td>—</td><td>—</td><td>—</td></tr>
                <tr><td>3o</td><td>+2</td><td>Censura (Arquétipo), Canalizar Divindade</td><td>3</td><td>—</td><td>—</td><td>—</td><td>—</td></tr>
                <tr><td>4o</td><td>+2</td><td>Incremento no Valor de Habilidade</td><td>3</td><td>—</td><td>—</td><td>—</td><td>—</td></tr>
                <tr><td>5o</td><td>+3</td><td>Ataque Extra</td><td>4</td><td>2</td><td>—</td><td>—</td><td>—</td></tr>
                <tr><td>6o</td><td>+3</td><td>Lâmina do Zealot, Bênção da Vingança</td><td>4</td><td>2</td><td>—</td><td>—</td><td>—</td></tr>
                <tr><td>7o</td><td>+3</td><td>Evasão, Ataque Vingativo</td><td>4</td><td>3</td><td>—</td><td>—</td><td>—</td></tr>
                <tr><td>8o</td><td>+3</td><td>Incremento no Valor de Habilidade</td><td>4</td><td>3</td><td>—</td><td>—</td><td>—</td></tr>
                <tr><td>9o</td><td>+4</td><td>—</td><td>4</td><td>3</td><td>2</td><td>—</td><td>—</td></tr>
                <tr><td>10o</td><td>+4</td><td>Convicção Verdadeira, Juramento de Inimizade Aprimorado</td><td>4</td><td>3</td><td>2</td><td>—</td><td>—</td></tr>
                <tr><td>11o</td><td>+4</td><td>Clareza da Alma, Ira do Divino</td><td>4</td><td>3</td><td>3</td><td>—</td><td>—</td></tr>
                <tr><td>12o</td><td>+4</td><td>Incremento no Valor de Habilidade</td><td>4</td><td>3</td><td>3</td><td>—</td><td>—</td></tr>
                <tr><td>13o</td><td>+5</td><td>—</td><td>4</td><td>3</td><td>3</td><td>1</td><td>—</td></tr>
                <tr><td>14o</td><td>+5</td><td>Espírito Duradouro</td><td>4</td><td>3</td><td>3</td><td>1</td><td>—</td></tr>
